pe":"text"},{"type":"codeVoice","code":"UIImage"},{"text":" ","type":"text"},{"type":"text","text":"objects and may be recycled later and put into a reuse queue that is maintained"},{"text":" ","type":"text"},{"text":"by the map view.","type":"text"}],"fragments":[{"kind":"identifier","text":"MLNAnnotationImage"}],"kind":"symbol","type":"topic","title":"MLNAnnotationImage","role":"symbol","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationImage"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotationView/scalesWithViewingDistance":{"kind":"symbol","title":"scalesWithViewingDistance","role":"symbol","fragments":[{"kind":"identifier","text":"scalesWithViewingDistance"}],"url":"\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance","abstract":[{"text":"A Boolean value that determines whether the annotation view grows and shrinks","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"type":"text","text":" "},{"type":"text","text":"tilted map."}],"type":"topic"},"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotation":{"kind":"symbol","url":"\/documentation\/maplibre\/mlnannotation","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation","title":"MLNAnnotation","role":"symbol","abstract":[{"type":"text","text":"The "},{"isActive":true,"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation"},{"type":"text","text":" protocol is used to provide annotation-related information"},{"text":" ","type":"text"},{"type":"text","text":"to a map view. To use this protocol, you adopt it in any custom objects that"},{"text":" ","type":"text"},{"type":"text","text":"store or represent annotation data. Each object then serves as the source of"},{"type":"text","text":" "},{"text":"information about a single map annotation and provides critical information,","type":"text"},{"type":"text","text":" "},{"text":"such as the annotation’s location on the map. Annotation objects do not provide","type":"text"},{"text":" ","type":"text"},{"text":"the visual representation of the annotation but typically coordinate (in","type":"text"},{"type":"text","text":" "},{"type":"text","text":"conjunction with the map view’s delegate) the creation of an appropriate"},{"type":"text","text":" "},{"text":"objects to handle the display.","type":"text"}],"fragments":[{"text":"MLNAnnotation","kind":"identifier"}],"type":"topic"}}}