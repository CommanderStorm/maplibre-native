ent":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Scaling many on-screen annotation views can contribute to poor map"},{"type":"text","text":" "},{"type":"text","text":"performance. Consider keeping this property disabled if your use case"},{"text":" ","type":"text"},{"type":"text","text":"involves hundreds or thousands of annotation views."}]}]}]}],"schemaVersion":{"patch":0,"major":0,"minor":3},"metadata":{"fragments":[{"text":"scalesWithViewingDistance","kind":"identifier"}],"modules":[{"name":"MapLibre"}],"title":"scalesWithViewingDistance","remoteSource":{"fileName":"MLNAnnotationView.h","url":"https:\/\/github.com\/maplibre\/maplibre-native\/blob\/main\/platform\/ios\/src\/MLNAnnotationView.h#L180"},"roleHeading":"Instance Property","externalID":"c:objc(cs)MLNAnnotationView(py)scalesWithViewingDistance","role":"symbol","symbolKind":"property","navigatorTitle":[{"text":"scalesWithViewingDistance","kind":"identifier"}]},"kind":"symbol","variants":[{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/maplibre\/mlnannotationview\/scaleswithviewingdistance"]}],"identifier":{"url":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView\/scalesWithViewingDistance","interfaceLanguage":"occ"},"abstract":[{"text":"A Boolean value that determines whether the annotation view grows and shrinks","type":"text"},{"type":"text","text":" "},{"type":"text","text":"as the distance between the viewpoint and the annotation view changes on a"},{"type":"text","text":" "},{"type":"text","text":"tilted map."}],"hierarchy":{"paths":[["doc:\/\/org.swift.MyProject\/documentation\/MapLibre","doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotationView"]]},"sections":[],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNAnnotation":{"kind":"symbol","type":"topic","abstract":[{"text":"The ","type":"text"},{"type":"reference","identifier":"doc:\/\/org.swift.MyProject\/documentation\/MapLibre\/MLNAnnotation","isActive":t