deVoice"},{"text":" anchor, ","type":"text"},{"type":"codeVoice","code":"[3, 0]"},{"text":" will be used for","type":"text"},{"text":" ","type":"text"},{"code":"textOffset","type":"codeVoice"},{"text":"; the text will be shifted right by 3 ems.","type":"text"}]},{"inlineContent":[{"type":"text","text":"This property is only applied to the style if "},{"type":"codeVoice","code":"text"},{"type":"text","text":" is non-"},{"type":"codeVoice","code":"nil"},{"type":"text","text":", and"},{"type":"text","text":" "},{"type":"codeVoice","code":"symbolPlacement"},{"type":"text","text":" is set to an expression that evaluates to or"},{"type":"text","text":" "},{"type":"codeVoice","code":"MLNSymbolPlacementPoint"},{"type":"text","text":". Otherwise, it is ignored."}],"type":"paragraph"},{"inlineContent":[{"text":"You can set this property to an expression containing any of the following:","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"Constant interleaved "},{"type":"codeVoice","code":"MLNTextAnchor"},{"type":"text","text":" and "},{"type":"codeVoice","code":"CGVector"},{"type":"text","text":" array values"},{"type":"text","text":" "},{"type":"text","text":"Predefined functions, including mathematical and string operators"},{"type":"text","text":" "},{"text":"Conditional expressions","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"Variable assignments and references to assigned variables"},{"type":"text","text":" "},{"text":"Interpolation and step functions applied to the ","type":"text"},{"type":"codeVoice","code":"$zoomLevel"},{"text":" variable and\/or","type":"text"},{"text":" ","type":"text"},{"type":"text","text":"feature attributes"}],"type":"paragraph"}]}],"references":{"doc://org.swift.MyProject/documentation/MapLibre/MLNSymbolStyleLayer":{"kind":"symbol","role":"symbol","fragments":[{"text":"MLNSymbolStyleLayer","kind":"identifier"}],"title":"MLNSymbolStyleLayer","abstract":[{"type":"text","text":"An "},{"type":"reference